<h1>Burgers of the Day!</h1>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/if}}
  {{/each}}
</ul>

<div class="bgWhite">
  <h2 class="">Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burgerName">Burgers Name:</label>
      <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>